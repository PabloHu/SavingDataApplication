<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.savingdataapplication.MainActivity">

    <TextView
        android:text="Shared Preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type something to be saved"/>
    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Data"
android:onClick="usingSharedpref"
        />
    <Button
        android:id="@+id/btnRetrieveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Data"
        android:onClick="usingSharedpref"
        />

    <TextView
        android:id="@+id/tvRetreiveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
android:text="SQL liteDAtabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type name"/>
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type phone"/>
    <Button
        android:id="@+id/btnSaveDataSQL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Contact"
        android:onClick="usingSQLite"
        />
    <Button
        android:id="@+id/btnGetDataSQL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Contact"
        android:onClick="usingSQLite"
        />
</LinearLayout>
